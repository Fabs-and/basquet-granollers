---
import ButtonAnchor from "@components/ButtonAnchor.astro";

import { teams } from "@data/teamsSection.ts";
---

<div class="teams-container">
  {
    teams.map((team) => (
      <article class="team-article">
        <img src={team.image} alt={team.alt} />
        <div class="half-hidden">
          <div class="flex-content">
            <h3>{team.name}</h3>
            <ButtonAnchor slug={team.slug} text={`Veure mÃ©s`} />
          </div>
        </div>
      </article>
    ))
  }
</div>

<style>
  .teams-container {
    height: 80vh;
    display: flex;
    justify-content: space-between;
    padding-inline: var(--padding-inline);
  }

  .team-article {
    position: relative;
    width: 17.8125rem;
    height: 19.3125rem;
    border-top-left-radius: 2.9375rem;
    overflow: hidden;
  }

  .half-hidden {
    position: absolute;
    padding-inline: 1.81rem;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(0deg, #18366c 0%, rgba(0, 26, 156, 0) 83.17%);
    transform: translateY(20%);
    transition: transform 0.2s ease-in;
    display: flex;
    align-items: end;
  }

  .half-hidden:hover {
    transform: translateY(0);
  }

  .flex-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding-bottom: 1rem;
  }
</style>
