---
import ButtonAnchor from "@components/ButtonAnchor.astro";
const { team } = Astro.props;
---

{
  team.name === "Escola" ? (
    <article class="team-article">
      <img src={team.image} alt={team.alt} />
      <div class="half-hidden">
        <img class="mascot" src={team.mascot} alt={team.mascotAlt} />
        <div class="flex-content">
          <h3>{team.name}</h3>
          <ButtonAnchor slug={team.slug} text={`Veure més`} />
        </div>
      </div>
    </article>
  ) : (
    <article class="team-article">
      <img src={team.image} alt={team.alt} />
      <div class="half-hidden">
        <div class="flex-content">
          <h3>{team.name}</h3>
          <ButtonAnchor slug={team.slug} text={`Veure més`} />
        </div>
      </div>
    </article>
  )
}

<style>
  
  .team-article {
    position: relative;
    width: 17.8125rem;
    height: 19.3125rem;
    border-top-left-radius: 2.9375rem;
    overflow: hidden;
  }

  .half-hidden {
    position: absolute;
    padding-inline: 1.81rem;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(0deg, #18366c 0%, rgba(0, 26, 156, 0) 83.17%);
    transform: translateY(20%);
    transition: transform 0.2s ease-in;
    display: flex;
    align-items: end;
  }

  .half-hidden:hover {
    transform: translateY(0);
  }

  .half-hidden .mascot {
    position: absolute;

    right: -1.5rem;
    transform: translateY(17%);
    transition: transform 0.2s ease-in-out;
  }

  .half-hidden:hover .mascot {
    transform: translateY(30%);
  }

  .flex-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding-bottom: 1rem;
  }
</style>
