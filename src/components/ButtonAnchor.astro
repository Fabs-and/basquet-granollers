---
const {
  text,
  isFilled,
  slug,
  textColor,
  hoverTextColor,
  isSmallBtn, // Add this line to destructure the new prop
} = Astro.props as {
  text: string;
  isFilled: boolean;
  slug: string;
  textColor: string;
  hoverTextColor: string;
  isSmallBtn: boolean; // Define the new prop here
};
---

<a
  href={slug}
  class:list={[{ isFilled: isFilled},{ isSmallBtn: isSmallBtn }]}
  >{text.toUpperCase()}</a
>

<style define:vars={{ textColor, hoverTextColor }}>
  a {
    text-decoration: none;
    display: grid;
    place-items: center;
    height: var(--btn-height);
    border: 1px solid var(--clr-accent);
    border-radius: 1.75rem;
    color: var(--textColor);
  }

  a:hover {
    cursor: pointer;
    background-color: var(--clr-accent);
    color: var(--hoverTextColor);
  }

  .isFilled {
    background-color: var(--clr-accent);
  }

  .isSmallBtn {
    width: var(--btn-width-sm);
  }
</style>
