---
import { mainSponsorsWhite } from "@data/sponsors";
---
<section class="main-sponsors-flex-container">
    <p class="main-sponsors-title">Patrocinadors principals</p>
    <nav>
      <ul class="main-sponsors-container">
        {
          mainSponsorsWhite.map((sponsor) => (
            <li>
              <a href={sponsor.link} target="_blank" rel="noopener noreferrer">
                <img src={sponsor.logo} alt={sponsor.alt} />
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </section>

  <style>
    .main-sponsors-flex-container {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 3.05rem;
    height: var(--sponsors-main-hg)
  }

  .main-sponsors-title {
    height: 60%;
    padding-right: 3.05rem;
    display: flex;
    align-items: center;
    border-right: 1px solid white;
  }
  ul {
    display: flex;
    align-items: center;
    gap: 3.05rem;
  }

    @media (width < 680px) {
    .main-sponsors-title {
      height: fit-content;
      padding: 0rem;
      border-right: none;

      
    }
    .main-sponsors-flex-container {
      flex-direction: column;
      gap: 1rem;
    }
    ul {
      gap: 2rem;
    }
  }
  </style>