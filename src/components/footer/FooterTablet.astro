---
import { collapsibleArrow } from '@icons/icons';

const { topFooterLinks, topFooterImportantLinks } = Astro.props;
---

<div class="articles-container">

  <article class="first-article">
    {
      topFooterLinks.map((category) => (
       
          <details >
            
            <summary>
              <h5>{category.title.toUpperCase()}</h5>
            </summary>
    
            <ul class='links-container'>
                {category.links.map((link) => (
                  <li>
                    <a href={link.slug}>{link.name}</a>
                  </li>
                ))}
            </ul>
                   
          </details>
      
      ))
    }
  </article>

  <article class="second-article">
    <ul class='top-footer-articles'>
      {
        topFooterImportantLinks.map((link) => (
          <li>
            <a
              href={`/${link.slug}`}
              target='_blank'
              rel='noopener noreferrer'
            >
              <h5>{link.name.toUpperCase()}</h5>
            </a>
          </li>
        ))
      }
    </ul>
  </article>

</div>

<style>
  .articles-container {
    display: flex;
    justify-content: space-evenly;
  }

  details > summary {
    list-style: none;
  }

  summary::-webkit-details-marker {
	  display: none;
  }

  summary {
    cursor: pointer;
  }

  .first-article {
    margin-top: 4.85rem;
    padding-bottom: 4.85rem;
    display: flex;
    flex-direction: column;
    gap: 2.37rem;
    width: 10rem;
  }

  .links-container {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 0.65rem;
  }
  
  .second-article {
    margin-top: 4.85rem;
    width: 13.7rem;
  }
</style>