---
const { topFooterLinks } = Astro.props;
---

 {
  topFooterLinks.map((category) => (
    <details >
      <summary>
        <h5>{category.title.toUpperCase()}</h5>
      </summary>
      <ul class='links-container'>
          {category.links.map((link) => (
            <li>
              <a href={link.slug}>{link.name}</a>
            </li>
          ))}
      </ul>   
    </details>
  ))
}

<style>
  details > summary {
    list-style: none;
  }

  summary::-webkit-details-marker {
	  display: none;
  }

  details summary {
    cursor: pointer;
    position: relative;
    transition: margin 0.45s ease-out;
  }

  details[open] summary {
    margin-bottom: 10px;
  }

  
  summary::before {
  	position: absolute;
    top: -20%;
    left: 4.5rem;
    content: url('../../../collapsibleArrow.svg');
    display: inline-flex;
    justify-content: center;
    align-items: center;
    transform: rotate(0);
    transform-origin: 50% 42%;
    transition: 0.45s transform ease-in-out;
  }

  details[open] > summary:before {
    transform: rotate(-180deg);
    transition: 0.45s transform ease-in-out;
  }

  .links-container {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 0.65rem;
  }
</style>