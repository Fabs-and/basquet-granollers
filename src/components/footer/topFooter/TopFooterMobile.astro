---
import Accordion from "./Accordion.astro";
import ImportantLinksContainer from "./ImportantLinksContainer.astro";

const { topFooterLinks, topFooterImportantLinks } = Astro.props;
---

<article class="first-article">
  <Accordion {topFooterLinks}/>
</article>

<article class="second-article">
  <ImportantLinksContainer {topFooterImportantLinks}/>
</article>

<style>
  .first-article {
    padding-top: 4.85rem;
    display: flex;
    flex-direction: column;
    gap: 1.8rem;
    width: 13.7rem;
    margin: auto;
  }

  .second-article {
    padding-top: 1.8rem;
    padding-bottom: 4.85rem;
    width: 13.7rem;
    margin: auto;

  }
</style>