---
import Accordion from "./Accordion.astro";
import ImportantLinksContainer from "./ImportantLinksContainer.astro";


const { topFooterLinks } = Astro.props;

const { generalLinks, fixedLinks } = topFooterLinks;

---

<article class="mobile-first-article">
  <Accordion {generalLinks} />
</article>

<article class="mobile-second-article">
  <ImportantLinksContainer {fixedLinks} />
</article>

<style>
  .mobile-first-article {
    /* padding-top: 4.85rem; */
    font-size: 0.6875rem;
    display: flex;
    flex-direction: column;
    gap: 1.8rem;
    width: 100%;
    /* margin: auto; */
  }

  .mobile-second-article {
    padding-top: 1.8rem;
    /* padding-bottom: 4.85rem; */
    width: 13.7rem;
    /* margin: auto; */
  }
</style>
