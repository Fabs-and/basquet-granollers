---
import Accordion from "./Accordion.astro";
import ImportantLinksContainer
 from "./ImportantLinksContainer.astro";
 
const { topFooterLinks, topFooterImportantLinks } = Astro.props;
---

<div class="articles-container">
  <article class="first-article">
    <Accordion {topFooterLinks}/>
  </article>
  <article class="second-article">
    <ImportantLinksContainer {topFooterImportantLinks}/>
  </article>
</div>

<style>
  .articles-container {
    display: flex;
    justify-content: space-evenly;
  }

  .first-article {
    margin-top: 4.85rem;
    padding-bottom: 4.85rem;
    display: flex;
    flex-direction: column;
    gap: 2.37rem;
    width: 10rem;
  }

  .second-article {
    margin-top: 4.85rem;
    width: 13.7rem;
  }
</style>