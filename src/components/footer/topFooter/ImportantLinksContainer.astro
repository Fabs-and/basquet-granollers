---
const {fixedLinks} = Astro.props
---

<ul class='top-footer-articles'>
  {
    fixedLinks.map((link) => (
      <li>
        <a
          href={`${link.link}`}
        >
          <h5>{link.name.toUpperCase()}</h5>
        </a>
      </li>
    ))
  }
</ul>

<style>
 

  h5 {
    font-weight: 500;
    /* font-size: 1.125rem; */
  }

    /* Add padding to the bottom of all <li> elements */
  .top-footer-articles li {
    padding-bottom: 1.8rem; /* or whatever value you prefer */
  }

  /* Remove padding from the bottom of the last <li> element */
  .top-footer-articles li:last-child {
    padding-bottom: 0;
  }

  @media (width < 965px) {
    h5 {
    font-size: 1.125rem;
  }}
</style>