---
// Import types
import type { Category, Post } from "fetch-wordpress-api";

// Import util functions
import { dateConverter } from "@utils/helperFunctions";

const { post, postCategories, isFirstPost } = Astro.props as {
  post: Post;
  postCategories: Category[];
  isFirstPost: boolean;
};

const {
  title: { rendered: title },
  excerpt: { rendered: excerpt },
  slug,
  date,
  image,
} = post;
---

<a href={`/${slug}`}>
  <article class="card" class:list={[{ isFirstPost: isFirstPost }]}>
    <img src={image} alt={title} />
    <div class="info-container">
      <h3 set:html={title} />
      <p>{`Publicat ${dateConverter(date)}`}</p>
    </div>
  </article>
</a>

<style>
  p {
    font-style: italic;
  }
  .isFirstPost {
    height: 32.0625rem;
    width: 43.375rem;
    /* width: clamp(10rem, 30rem, 43.375rem); */
    border-top-left-radius: 2.9375rem;
    overflow: hidden;
    position: relative;
  }
  article.card {
  
  }
  
  .isFirstPost img {
    height: 80%;
    border-top-left-radius: 2.9375rem;
    transition: transform 0.3s;
    position: relative;
    object-fit: cover;
    /* z-index: 0; */
  }
  
  .isFirstPost img:hover {
    transform: scale(1.1);
  }
  
  .isFirstPost .info-container {
    /* so the z-index has effect and the image does not overflow the info-container when hovered */
    position: relative; 
    background-color: var(--clr-secondary);
    height: 20%;
    padding-inline: 1rem;
    padding-block: 0.5rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    z-index:1;
  }
</style>
