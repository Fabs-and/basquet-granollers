<style>
  .memberships.active {
    animation: slide-in-from-left 0.45s forwards ease-in;
  }

  .memberships.outgoing {
    animation: slide-out-to-left 0.45s forwards ease-in;
  }

  .sponsors.active {
    animation: slide-in-from-right 0.45s forwards ease-in;
  }

