    grid-template-columns: repeat(3, var(--membership-item-wd-big));
    place-items: center;
    justify-content: space-between;
    padding-right: var(--padding-inline);
    /* gap: 1.3rem; */
  }

  .sponsors-desktop {
    padding-right: var(--padding-inline);
    display: grid;
    grid-template-columns: repeat(
      auto-fit,
      minmax(var(--membership-item-wd-big), 1fr)
    );
    place-items: center;
    justify-content: space-between;
    gap: 1.3rem;
  }
  .g-slider-container {
    display: none;
  }

  .sponsors-slider {
    display: none;
  }

  .sponsors {
    display: none;
  }

  .title-and-options-container {
    padding-right: var(--padding-inline);
    display: flex;
    justify-content: space-between;
    padding-bottom: var(--padding-heading-big);
    flex-wrap: wrap;
    gap: 1.5rem;
  }

  .options-container {
    display: flex;
    gap: 1.5rem;
  }
  .button-anchor {
    width: var(--btn-width-sm);
    transition: all 0.3s ease-in-out;
  }
  .selected {
    background-color: var(--clr-accent);
  }

  @keyframes slide-in-from-right {
    0% {
      transform: translateX(100%);
    }
    100% {
      transform: translateX(0);
    }
  }

  @keyframes slide-in-from-left {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(0);
    }
  }

  @keyframes slide-out-to-right {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(100%);
    }
  }

  @keyframes slide-out-to-left {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-100%);
    }
  }
  @media (width < 1399px) {
    .sponsors-desktop > div:nth-child(odd) {
      justify-self: end;
    }

    .sponsors-desktop > div:nth-child(even) {
      justify-self: start;
    }
  }

  @media (width < 1374px) {
    .membership-desktop {
      grid-template-columns:
        var(--membership-item-wd-medium) var(--membership-item-wd-medium)
        var(--membership-item-wd-medium);
      justify-content: center;
      gap: 1rem;
    }
  }

  @media (width < 1025px) {
    .title-and-options-container {
      padding-inline: var(--padding-inline-tablet);
    }

    .membership-desktop {
      padding-inline: 0rem;
      padding-right: var(--padding-inline-tablet);
    }

    .sponsors-desktop {
      padding-inline: 0rem;
      padding-right: var(--padding-inline-tablet);
    }

    .title-and-options-container {
      padding-bottom: var(--padding-heading-medium);
    }
  }

  @media (width < 932px) {
    .membership-desktop {
      display: none;
    }
    .g-slider-container {
      display: block;
    }

    .title-and-options-container {
      padding-left: 0rem;
    }
  }

  @media (width < 859px) {
    .sponsors-desktop {
      display: none;
    }

    .sponsors-slider {
      display: block;
    }

    .memberships.active,
    .memberships.outgoing,
    .sponsors.active,
    .sponsors.outgoing {
      animation: none !important;
    }
  }
  @media (width < 648px) {
    .title-and-options-container {
      padding-right: var(--padding-inline-mobile);
      padding-bottom: var(--padding-heading-small);
    }
  }

  @media (width < 397px) {
    .options-container {
      gap: 0rem;
      width: 100%;
      justify-content: space-between;
    }
  }
</style>
