---
import HpSectionLayout from "@layouts/HpSectionLayout.astro";
import TeamItem from "@components/homePage/teams/TeamItem.astro";

import { teamsCategories } from "@data/apiData";

const { noHeading } = Astro.props;
---

<HpSectionLayout sectionTitle="Els nostres equips" {noHeading}>
  <ul class="teams-container">
    {teamsCategories.map((teamCategory) => <TeamItem team={teamCategory} />)}
  </ul>
</HpSectionLayout>

<style>
  .teams-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
    margin-bottom: calc(var(--pd-y-big) * -1);
  }

  @media (width > 1400px) {
    .teams-container {
      gap: 1.25rem;
    }
  }

  @media (width < 1025px) {
    .teams-container {
      margin-bottom: calc(var(--pd-y-medium) * -1);
    }
  }
  @media (width < 648px) {
    .teams-container {
      margin-bottom: calc(var(--pd-y-small) * -1);
      margin-inline: calc(var(--pd-x-small) * -1);
    }
  }
</style>
