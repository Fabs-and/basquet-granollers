---
import TeamItem from "@components/homePage/teams/TeamItem.astro";

import { fetchImagesInPageBySlug } from "fetch-wordpress-api";


const teams = await fetchImagesInPageBySlug("equips1");
---

<section class="teams-section-container">
  <div class="g-section-container">
    <h2>Els equips del Club BÃ squet Granollers</h2>
    <div class="teams-container">
      {
        teams.reverse().map((team) => (
          <div>
            <TeamItem {team} />
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .teams-section-container {
    padding-block: 2rem;
    padding-inline: var(--padding-inline);
  }

  .g-section-container {
    padding-inline: 0rem !important;
  }

  h2 {
    padding-bottom: 2rem;
  }

  .teams-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
  }

  @media (width < 1385px) {
    .teams-section-container {
      padding-inline: 0rem;
    }

    h2 {
      padding-inline: var(--padding-inline);
    }

    .teams-container {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      place-items: center;
      gap: 1rem;
    }

    .teams-container > :nth-child(1) {
      justify-self: end;
    }

    .teams-container > :nth-child(2) {
      justify-self: start;
    }

    .teams-container > :nth-child(3) {
      justify-self: end;
    }

    .teams-container > :nth-child(4) {
      justify-self: start;
    }
  }

  @media (width < 1025px) {
    h2 {
      padding-inline: var(--padding-inline-tablet);
    }
  }
  @media (width < 754px) {
    .teams-container {
      display: flex;
      flex-direction: column;
      align-items: center;
    }
  }
  @media (width < 648px) {
    h2 {
      padding-inline: var(--padding-inline-mobile);
    }
  }

  @media (width > 1400px) {
    .g-section-container {
      padding-inline: 3rem;
    }
  }
</style>
