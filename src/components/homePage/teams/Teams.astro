---
import HomePageSectionLayout from "@layouts/HomePageSectionLayout.astro";
import TeamItem from "@components/homePage/teams/TeamItem.astro";

import { teamsCategories } from "@data/apiData";

const { noHeading } = Astro.props;
---

<HomePageSectionLayout
  sectionTitle="Els nostres equips"
  {noHeading}
>
  <div class="teams-container">
    {
      teamsCategories.map((teamCategory) => (
        <div>
          <TeamItem team={teamCategory} />
        </div>
      ))
    }
  </div>
</HomePageSectionLayout>

<style>
  .teams-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    padding-right: var(--padding-inline);
  }

  @media (width < 1400px) {
    .teams-container {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      place-items: center;
      gap: 1rem;
    }

    .teams-container > :nth-child(1) {
      justify-self: end;
    }

    .teams-container > :nth-child(2) {
      justify-self: start;
    }

    .teams-container > :nth-child(3) {
      justify-self: end;
    }

    .teams-container > :nth-child(4) {
      justify-self: start;
    }
  }

  @media (width < 1025px) {
    .teams-container {
      padding-right: var(--padding-inline-tablet);
    }
  }
  @media (width < 754px) {
    .teams-container {
      display: flex;
      flex-direction: column;
      align-items: center;
    }
  }
  @media (width < 648px) {
    .teams-container {
      padding-right: var(--padding-inline-mobile);
    }
  }

   @media (width > 1400px) {
    .teams-container {
      padding-right: 0rem;
      justify-content: center;
      gap: 1.25rem;

    }
  }
</style>
