---
import HomePageSectionLayout from "@layouts/HomePageSectionLayout.astro";

import NewsDesktop from "@components/homePage/news/NewsDesktop.svelte";
import Slider from "@components/Slider.svelte";

import { isLastYearNews } from "@utils/helperFunctions";
import { allNews } from "@data/apiData";
import { FEATURED_NEWS_CATEGORY_ID } from "@data/globalConstants";
import type { Post } from "src/types";

allNews.splice(10);

let lastYearNews = allNews.filter((oneNews) => isLastYearNews(oneNews.date));

const featuredNews = [
  lastYearNews.find((oneNews) =>
    oneNews.categories.includes(FEATURED_NEWS_CATEGORY_ID),
  ),
];

let newsToRender = lastYearNews.filter(
  (oneNews) => !oneNews.categories.includes(FEATURED_NEWS_CATEGORY_ID),
);

if (featuredNews && featuredNews.length > 0) {
  newsToRender = [featuredNews[0]!, ...newsToRender];
}
---

<HomePageSectionLayout
  sectionTitle="NotÃ­cies CBG"
  textColor={`var(--clr-primary)`}
  backgroundColor={`var(--clr-contrast)`}
>
  <div class="news-desktop">
    <NewsDesktop client:visible news={newsToRender} />
  </div>

  <div class="g-slider-container">
    <Slider
      client:visible
      sliderItems={newsToRender}
      childComponent="NewsItem"
      itemWidth={312}
      gap={`1rem`}
    />
  </div>
</HomePageSectionLayout>

<style>
  .g-slider-container {
    display: none;
  }

  @media (max-width: 1068px) {
    .news-desktop {
      display: none;
    }
    .g-slider-container {
      display: block;
    }
  }

  @media (max-width: 1025px) {
    .g-slider-container {
      padding-bottom: var(--padding-section-medium);
    }
  }

  @media (max-width: 648px) {
    .g-slider-container {
      padding-bottom: var(--padding-section-small);
    }
  }
</style>
