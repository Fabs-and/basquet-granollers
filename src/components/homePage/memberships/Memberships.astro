    }

    .sponsors-desktop {
      padding-inline: 0rem;
    }
  }

  @media (width < 932px) {
    .membership-desktop {
      display: none;
    }
    .g-slider-container {
      display: block;
    }

    .g-page-section-with-slider-container {
      padding-left: var(--padding-inline-tablet);
    }

