---
const { title, subtitle } = Astro.props;
---

<h1>{title}</h1>
{subtitle && <h2>{subtitle}</h2>}

<style>
  h1 {
    font-weight: 600;
    padding-bottom: 1.6rem;
  }

  h2 {
    color: var(--clr-accent);
  }

  @media (width < 648px) {
    h1 {
      font-size: 1.625rem;
      line-height: 2rem;
      padding-bottom: 0.5rem;
    }

    h2 {
      font-size: 1.375rem;
    }
  }
</style>
