---
import ButtonAnchor from "@components/ButtonAnchor.astro";

import { memberships } from "@data/memberships";

import { membershipCheck } from "@assets/icons";
---

<section class="membership-section-container">
  <div class="section-title-container">
    <h2>Forma part de la fam√≠lia CBG</h2>
    <div class="title-buttons-container">
      <ButtonAnchor isFilled={true} text={`fes-te soci`} />
      <ButtonAnchor text={`fes-te sponsor`} />
    </div>
  </div>
  <div class="membership-articles-container">
    {
      memberships.map((membership) => (
        <article class="membership-article">
          <div class="image-container">
            <img src="" alt="" />
            <h3 class="memebership-title">{membership.name}</h3>
          </div>
          <article class="membership-info-container">
            <div class="membership-price">
              <p>
                <span class="price-number">{membership.price}</span> / any
              </p>
            </div>
            <div class="membership-advantages">
              {membership.advantages.map((advantage) => (
                <div class="advantage-line">
                  <div>
                    <Fragment set:html={membershipCheck} />
                  </div>
                  <p>{advantage}</p>
                </div>
              ))}
            </div>
            <div class="button-anchor">
              <ButtonAnchor text={`contacta`} />
            </div>
            <div class="ball-img">
              <img src="membership-ball.png" alt="" class="" />
            </div>
          </article>
        </article>
      ))
    }
  </div>
</section>

<style>
  .membership-section-container {
    background-color: var(--clr-primary);
    padding-inline: var(--padding-inline);
    padding-block: 2rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .membership-articles-container {
    display: flex;
    justify-content: space-between;
  }

  .section-title-container {
    display: flex;
    justify-content: space-between;
    padding-bottom: 2rem;
  }

  .title-buttons-container {
    display: flex;
    gap: 1.19rem;
  }

  .image-container {
    position: relative;
    height: 13.125rem;
    background-color: gray;
  }

  .image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .memebership-title {
    position: absolute;
    left: 1.88rem;
    bottom: 1.88rem;
    z-index: 1;
  }

  .membership-article {
    height: 51.75rem;
    width: 24.1875rem;
    background-color: var(--clr-secondary);
    border-top-left-radius: 2.9375rem;
    overflow: hidden;
  }

  .membership-info-container {
    position: relative;
    height: 38.625rem;
    display: flex;
    flex-direction: column;
    padding: 1.88rem;
  }

  .membership-price {
    width: 100%;
    padding-bottom: 1.88rem;
    border-bottom: 1px solid var(--clr-contrast);
  }
  .price-number {
    font-size: 1.875rem;
    font-weight: 550;
    color: var(--clr-accent);
  }

  .membership-advantages {
    padding-block: 1.88rem;
    display: flex;
    flex-direction: column;
    gap: 0.87rem;
  }

  .button-anchor {
    position: absolute;
    left: 1.88rem;
    bottom: 1.88rem;
  }

  .advantage-line {
    display: flex;
    gap: 0.63rem;
  }

  .ball-img {
    position: absolute;
    opacity: 0.24;
    right: 0;
    bottom: 0;
  }
</style>
