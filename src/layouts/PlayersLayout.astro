---
import InternalPageLayout from "./PageLayout.astro";
import { extractPlayerInfo } from "@utils/helperFunctions";

const { heading, subHeading, team } = Astro.props;
---

<InternalPageLayout
  pageTitle={`Equips masculins del Club BÃ squet Granollers`}
  {heading}
  {subHeading}
>
  <div class="players-container">
    {
      team.map((player, i) => {
        return (
          <article class="player">
            <div class="image-container">
              <img
                src={player.url ? player.url : "/player-avatar.png"}
                alt=""
                loading={i < 3 ? "eager" : "lazy"}
              />
            </div>
            <div class="info-container">
              <p class="name">{extractPlayerInfo(player.caption).name}</p>
              <p class="position">
                {extractPlayerInfo(player.caption).position}
              </p>
            </div>
          </article>
        );
      })
    }
  </div>
</InternalPageLayout>

<style>
  h2 {
    color: var(--clr-accent);
    padding-top: 1.62rem;
  }

  .name {
    font-size: 1.25rem;
    font-weight: 500;
  }

  .position {
    font-size: 0.78rem;
  }
  .players-container {
    /* padding-block: var(--pd-y-big); */
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1.05rem;
  }
  .player {
    height: 27.31rem;
    width: 17.875rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    /* justify-content: center; */
  }

  .image-container {
    height: 78%;
    width: 100%;
    background-color: #d9d9d9;
    border-top-left-radius: var(--brdr-left-top-radius);
    overflow: hidden;
  }

  .image-container img {
    width: 100%;
    object-fit: cover;
    margin: auto;
  }

  .info-container {
    width: 100%;
    height: 23%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    background-color: var(--clr-primary);
    color: var(--clr-contrast);
  }

  @media (width < 1025px) {
    .equips-page {
      padding-inline: var(--pd-x-medium);
      padding-block: var(--pd-y-medium);
    }
    .player {
      width: 21.625rem;
      height: 33.03225rem;
    }
  }

  @media (width < 648px) {
    .equips-page {
      padding-inline: var(--pd-x-small);
      padding-block: var(--pd-y-big);
    }

    h1 {
      font-size: 2.1rem;
    }

    h2 {
      font-size: 1.5rem;
      padding-top: 0.75rem;
    }

    .player {
      width: 20.4375rem;
      height: 31.21838rem;
    }
  }
</style>
