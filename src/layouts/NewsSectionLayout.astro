---
import IndividualNews from "@components/postCards/IndividualNews.svelte";
import NewsSection from "@components/postCards/NewsSection.svelte";
import Slider from "@components/Slider.svelte";

const { posts } = Astro.props;
const title = "CBG Not√≠cies";
---

<section class="news-section-container">
  <h2>{title}</h2>

  <!-- <div class="desktop">
    <NewsSection client:visible {title} {posts} />
  </div> -->

  <div class="g-slider-container">
    <Slider
      client:visible
      sliderItems={posts}
      childComponent="individualNews"
      itemWidth={312}
      gap={`1rem`}
    >
      <IndividualNews />
    </Slider>
  </div>
</section>

<style>
  .g-slider-container {
    display: none;
  }

  .news-section-container {
    background-color: var(--clr-contrast);
    color: var(--clr-primary);
    padding-block: 2rem;
    padding-left: var(--padding-inline);
  }

  h2 {
    padding-bottom: 2rem;
  }

  @media (width < 1025px) {
    .news-section-container {
      padding-left: var(--padding-inline-tablet);
    }
    .g-slider-container {
      display: block;
    }

    .desktop {
      display: none;
    }

    @media (width < 648px) {
    .news-section-container {
      padding-left: var(--padding-inline-mobile);
    }
    .g-slider-container {
      display: block;
    }
    .desktop {
      display: none;
    }
   
  }

  }
</style>
