---
import NewsSection from "@components/postCards/NewsSection.svelte";
import NewsSectionResponsive from "@components/postCards/NewsSectionResponsive.svelte";

const { posts } = Astro.props;
const title = "CBG Not√≠cies";
---

<div class="desktop">
  <NewsSection client:visible {title} {posts} />
</div>
<div class="responsive">
  <NewsSectionResponsive client:visible {title} {posts} />
</div>

<style>
  .responsive {
    display: none;
  }
  @media (width < 1050px) {
    .desktop {
      display: none;
    }

    .responsive {
      display: block;
      /* width: 100%;
      overflow-x: scroll; */
    }
  }
</style>
