---
import IndividualNews from "@components/postCards/IndividualNews.svelte";
import NewsSection from "@components/postCards/NewsSection.svelte";
import NewsSectionResponsive from "@components/postCards/NewsSectionResponsive.svelte";

const { posts } = Astro.props;
const title = "CBG Not√≠cies";
---

<section class="responsive-news">
  <h2>{title}</h2>
  <div class="desktop">
    <NewsSection client:visible {title} {posts} />
  </div>
  <div class="responsive">
    <NewsSectionResponsive client:visible {posts} childComponent="individualNews">
      <IndividualNews />
    </NewsSectionResponsive>
  </div>
</section>

<style>
  .responsive {
    display: none;
  }
  @media (width < 1050px) {
    .responsive-news {
      width: 100vw;
      background-color: var(--clr-contrast);
      color: var(--clr-primary);
      padding-left: var(--padding-inline-tablet);
      padding-block: 2rem;
    }

    .desktop {
      display: none;
    }

    .responsive {
      display: block;
    }
  }

  @media (width < 374px) {
    .responsive-news {
      width: 104vw;
    }
  }
</style>
