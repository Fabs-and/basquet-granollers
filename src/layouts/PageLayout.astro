---
import BaseLayout from "./BaseLayout.astro";
import Headings from "@components/internal-pages/headings.astro";
const { title, subHeading, pageDescription } = Astro.props;
---

<BaseLayout {title} {pageDescription}>
  <section class="internal-page">
    <div class="max-width-page">
      <Headings heading={title} {subHeading} />
        <slot />
    </div>
  </section>
</BaseLayout>

<style>
  .internal-page {
    background-color: var(--clr-contrast);
    color: var(--clr-primary);
    padding-block: var(--pd-y-big);
    padding-inline: var(--pd-x);
  }

  .max-width-page {
    max-width: 1206px;
    margin: 0 auto;
  }

  @media (width < 1025px) {
    .internal-page {
      padding-block: var(--pd-y-medium);
      padding-inline: var(--pd-x-medium);
    }
  }
  @media (width < 648px) {
    .internal-page {
      padding-block: var(--pd-y-small);
      padding-inline: var(--pd-x-small);
    }
  }
</style>
