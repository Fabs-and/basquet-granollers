---
import TopHeader from '@components/header/topHeader/TopHeader.astro'
import TopHeaderResponsive from '@components/header/topHeader/TopHeaderResponsive.astro'

import BottomHeader from '@components/header/bottomHeader/BottomHeader.astro'
import BottomHeaderResponsive from '@components/header/bottomHeader/BottomHeaderResponsive.astro'
import HeaderLineSeparator from '@components/header/HeaderLineSeparator.astro'
---

<header>
  <section class="header-top-section">
    <div class="top-header">
      <TopHeader />
    </div>
    <div class="top-header responsive top">
      <TopHeaderResponsive />
    </div>
  </section>
  <section class="header-bottom-section">
    <div class="bottom-header">
      <BottomHeader />
    </div>
    <div class="bottom-header responsive">
      <BottomHeaderResponsive />
    </div>
  </section>
  <div class="separator-line">
    <HeaderLineSeparator />
  </div>
</header>

<style>
  header {
    position: sticky;
    top:0;
    z-index: 10;
  }
  .top-header {
    min-height: var(--top-header-hg);
    background-color: var(--clr-primary);
  }
 
  .bottom-header {
    min-height: var(--bottom-header-hg);
    background-color: var(--clr-contrast);
    opacity: 0.9;
    position: relative;
  }
  .responsive {
    display: none;
  }

  .separator-line {
    height: var(--header-separator-line-hg);
  }
   @media (width < 1025px) {
    .top-header, .bottom-header {
      display: none;
    }
     .separator-line {
    height: var(--header-separator-line-responsive-hg);
  }
    .bottom-header {
      padding-inline: var(--padding-inline-tablet);
    }
    .responsive {
      display: block;
    }
  }

   @media (width < 648px) {
    .top {
      display: none;
    }

    .bottom-header {
      padding-inline: var(--padding-inline-mobile);
    }
  }
</style>