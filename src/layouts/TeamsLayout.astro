---
import BaseLayout from "@layouts/BaseLayout.astro";
import Headings from "@components/internal-pages/headings.astro";
import InternalPageLayout from "./InternalPageLayout.astro";
const { teamsImages, heading, subHeading, title } = Astro.props;
---

<InternalPageLayout {title} {heading} {subHeading}>
  <div class="images-container">
    {
      teamsImages.map((image) => (
        <div class="image-container">
          <img src={image.url} alt={image.alt && image.alt} />
        </div>
      ))
    }
  </div>
</InternalPageLayout>

<style>
  .images-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
  }

  .image-container {
    width: 24rem;
    height: 18.4rem;
    border-top-left-radius: 2.9375rem;
    overflow: hidden;
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @media (width < 848px) {
    .image-container {
      width: 100%;
      height: auto;
    }
  }

  @media (width < 415px) {
    .image-container {
      width: 100vw;
      margin-inline: calc(var(--padding-inline-mobile) * -1);
    }
  }
</style>
