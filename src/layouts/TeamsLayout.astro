---
import BaseLayout from '@layouts/BaseLayout.astro';
import Headings from '@components/internal-pages/headings.astro'
const { teamsImages, teamCategory } = Astro.props;

const category = teamCategory === `femenins` || teamCategory === `masculins` ? `Equips ${teamCategory}` : teamCategory

console.log('teamsImages', teamsImages);
---

<BaseLayout title=`${category} del Club BÃ squet Granollers`>
  <section class="g-internal-page">
    <div class="g-section-container">
      <Headings
        title={category}
        subtitle="Temporada 2022-2023"/>
      <div class="images-container">
        {
          teamsImages.map((image: string) => (
            <div class="image-container">
              <img
                src={image.url}
                alt={image.alt && image.alt}
              />
            </div>
          ))
        }
      </div>
    </div>
  </section>
</BaseLayout>

<style>
 
  .g-section-container {
    padding-inline: var(--padding-inline);
  }

  .images-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
    padding-top: 4.5rem;
  }
  
  .image-container {
    width: 24rem;
    height: 18.4rem;
    border-top-left-radius: 2.9375rem;
    overflow: hidden;
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  @media (width < 1025px) {
    .g-section-container {
      padding-inline: var(--padding-inline-tablet);
    }
  }
  @media (width < 648px){
    .g-section-container {
      padding-inline: var(--padding-inline-mobile);
    }
    
    .images-container {
      padding-top: 2.13rem;
    }
    .image-container {
      width:20rem;
      height: 15.4rem;
    }
    
    h1 {
      font-size: 1.625rem;
      line-height: 2rem;
      padding-bottom: 0.5rem;
    }
    
    h2 {
      font-size: 1.375rem;
    }
  }
</style>
