---
//Import layouts
import DynamicPageLayout from "@layouts/DynamicPageLayout.astro";

//Import data
import { projects } from "../../data/apiData.ts";

//Import functions
import { formatHtml } from "@utils/helperFunctions";

export async function getStaticPaths() {
  return projects.map((project) => {
    return {
      params: { projectes: project.slug },
      props: {
        title: formatHtml(project.title.rendered),
        content: formatHtml(project.content.rendered),
        image: project.image,
      },
    };
  });
}

const project = Astro.props;
---

<DynamicPageLayout post={project} />
