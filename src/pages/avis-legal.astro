---
import { getFromAPI } from '@utils/api';
import BaseLayout from '@layouts/BaseLayout.astro';
import PostLayout from '@layouts/PostLayout.astro';

import { Endpoints, PostFields } from 'src/types';

const [postCalled] = await getFromAPI(Endpoints.pages, [
  PostFields.title,
  PostFields.content,
  PostFields.excerpt,
],1,-1,'avis-legal');


const post = {
  title: postCalled.title.rendered,
  content: postCalled.content.rendered
}
---

<BaseLayout pageTitle={post.title}>
  <PostLayout {post}/>
</BaseLayout>


