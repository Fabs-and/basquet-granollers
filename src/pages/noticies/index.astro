---
//Import Layouts
import PageLayout from "@layouts/PageLayout.astro";

//Import Components
import NoticiesPagination from "@components/internal-pages/NoticiesPagination.svelte";

//Import functions
import { getPostsInCategories } from "@services/apiFunctions";
import { NEWS_CATEGORY_ID, POST_FIELDS } from "@data/globalConstants";

const allNews = await getPostsInCategories(
  [NEWS_CATEGORY_ID],
  POST_FIELDS,
  100,
);
---

<PageLayout
  title={`Notícies del Club Bàsquet Granollers`}
  heading={`Notícies CBG`}
  subHeading={`Totes les notícies`}
>
  <NoticiesPagination client:visible noticies={allNews} />
</PageLayout>
