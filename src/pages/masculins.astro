---
import BaseLayout from "@layouts/BaseLayout.astro";

import { masculins } from "@data/teamsPage";
---

<BaseLayout pageTitle={`Equips masculins del Club BÃ squet Granollers`}>
  <section class="equips-page">
    <h1>Equips masculins</h1>
    <h2>Primer Equip</h2>
    <div class="players-container">
      {
        masculins[0].players.map((player) => (
          <article class="player">
            <div class="image-container">
              <img src={player.image ? player.image : '/player-avatar.png'} alt="" />
            </div>
            <div class="info-container">
              <p class="name">{player.nom}</p>
              <p class="position">{player.posicio}</p>
            </div>
          </article>
        ))
      }
    </div>
  </section>
</BaseLayout>

<style>
  h2 {
    color: var(--clr-accent);
    padding-top: 1.62rem;
  }
  .equips-page {
    background-color: var(--clr-contrast);
    color: var(--clr-primary);
    padding-block: 4.5rem;
    padding-inline: var(--padding-inline);
  }
  .name {
    font-size: 1.25rem;
    font-weight: 700;
  }

  .position {
    font-size: 0.78rem;
  }
  .players-container {
    padding-block: 4.5rem;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1.05rem;
    overflow: hidden;
  }
  .player {
    height: 27.31rem;
    width: 17.875rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    /* justify-content: center; */
  }

  .image-container {
    height: 78%;
    width: 100%;
    background-color: #D9D9D9;
    border-top-left-radius: 2.9375rem;
    overflow:hidden;
  }

   .image-container img {
    height: 100%;
    object-fit: cover;
    margin: auto;
  }

  .info-container {
    width: 100%;
    height: 23%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    background-color: var(--clr-primary);
    color: var(--clr-contrast);
  }
  
  @media (width < 1025px) {
    .equips-page {
      padding-inline: var(--padding-inline-tablet);
      padding-block: 3.87rem;
    }
    .player {
      width: 20.4375rem;
    }
  }

  @media (width < 648px) {
    .equips-page {
      padding-inline: var(--padding-inline-mobile);
      padding-block: 1.75rem;
    }

    .players-container {
      padding-block: 1.75rem;
    }

    h1 {
      font-size: 2.1rem;
    }

    h2 {
      font-size: 1.5rem;
      padding-top: 0.75rem;
    }
  }
</style>
